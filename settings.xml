		<route>
			<url>/api/lessons/</url>
			<method>POST</method>
			<roles>PROFESSOR</roles>
		</route>
		<route>
			<url>/api/lessons/*</url>
			<method>PUT</method>
			<roles>PROFESSOR</roles>
		</route>
		<route>
			<url>/api/lessons/*</url>
